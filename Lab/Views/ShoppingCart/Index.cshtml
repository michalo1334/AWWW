@using Lab.Models
@model ShoppingCartModel

<h2>Shopping cart</h2>
@if(Model.Items.Count == 0)
{
    <p>Your shopping cart is empty. @Model.Id</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.Items)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Index" asp-controller="Product">Continue shopping</a>